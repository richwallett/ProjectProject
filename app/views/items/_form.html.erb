<br>
<h3>Create an Item</h3>
<%= form_for [ @project, @item ] do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <%= f.radio_button :completed, "Complete" %>
  <%= f.label :completed, "Complete" %>
  <%= f.radio_button :completed, "Incomplete", {:checked => true} %>
  <%= f.label :completed, "Incomplete" %>
  <p>
	  <b>Project</b>
	  <%= f.collection_select(:project_id, Project.all, :id, :title) %>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>


